generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id Int @id @default(autoincrement())
  name String
  email String
  role Int
  avatar String
  langs Language[] 
  fields Field[]
  backGround Int
}


model Student {
  id Int @id
  userId Int 
  // user User @relation(fields: [userId], references: [id])

}

// model TA {

// }

model Language {
  id Int @id @default(autoincrement())
  userId Int
  user User @relation(fields: [userId], references: [id])
  lang String
}

model Field {
  id Int @id @default(autoincrement())
  userId Int
  user User @relation(fields: [userId], references: [id])
  field String
}